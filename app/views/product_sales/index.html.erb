<p id="notice"><%= notice %></p>

<h1>Product Sales</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_sales.each do |product_sale| %>
      <tr>
        <td><%= product_sale.product %></td>
        <td><%= product_sale.qty %></td>
        <td><%= product_sale.value %></td>
        <td><%= link_to 'Show', product_sale %></td>
        <td><%= link_to 'Edit', edit_product_sale_path(product_sale) %></td>
        <td><%= link_to 'Destroy', product_sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Sale', new_product_sale_path %>

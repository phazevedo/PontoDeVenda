<p id="notice"><%= notice %></p>



<h1>Produtos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Valor Venda</th>
      <th>Valor de Custo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.value %></td>
        <td><%= product.cost_value %></td>
        <td><%= link_to 'Visualizar', product,class: "btn btn-outline-info  ml-auto" %></td>
        <td><%= link_to 'Editar', edit_product_path(product),class: "btn btn-outline-warning  ml-auto" %></td>
        <td><%= link_to 'Excluir', product,class: "btn btn-outline-danger  ml-auto", method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_product_path,class: "btn btn-outline-success  ml-auto" %>

    <div class="form-group col-md-2">
        <%= label_tag "ID" %>
        <%= text_field_tag "id_search", nil, class: "form-control", onkeyup: "filter('id_search', 'client_table', 0)" %>
    </div>
    <div class="form-group col-md-6">
        <%= label_tag "Nome" %>
        <%= text_field_tag "name_search", nil, class: "form-control", onkeyup: "filter('name_search', 'client_table', 1)" %>
    </div>
</div>


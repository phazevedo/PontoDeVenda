<%= link_to 'Voltar', sales_path,class: "btn btn-outline-success  mr-auto" %>
<h1>Venda</h1>
<div>
    <div class="d-flex flex-column mb-3">
        <%= label_tag "Cliente" %>
        <%= text_field_tag nil, "#{@sale.client.id} - #{@sale.client.name}", { class: "form-control", disabled: "true"} %>
        </div>
    </div>
    <div class="d-flex flex-column mb-2">
    <h4>PRODUTOS</h4>
    <table class="table">
    <thead>
        <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Quantidade</th>
        <th>Valor Total</th>
        </tr>
    </thead>

    <tbody>
      <% @sale.sale_products.each do |sale_product| %>
      <tr>
        <td><%= sale_product.product.id %></td>
        <td><%= sale_product.product.description %></td>
        <td><%= sale_product.value %></td>
        <td><%= sale_product.qty %></td>
        <td><%= sale_product.value * sale_product.qty %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    <div>
    <%= text_field_tag "total", @sale.value, { class: "form-control text-right mb-5", disabled: "true"} %>
    </div>

</div>
   


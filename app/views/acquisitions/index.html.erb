<p id="notice"><%= notice %></p>

<h1>Acquisitions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acquisitions.each do |acquisition| %>
      <tr>
        <td><%= acquisition.date %></td>
        <td><%= acquisition.value %></td>
        <td><%= link_to 'Show', acquisition %></td>
        <td><%= link_to 'Edit', edit_acquisition_path(acquisition) %></td>
        <td><%= link_to 'Destroy', acquisition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Acquisition', new_acquisition_path %>
